#!/bin/sh

DOCKER_EXE="/usr/bin/env --ignore-environment docker\
 run\
  --rm\
  --interactive\
  --volume $PWD:$PWD:z\
  --workdir $PWD\
  --user $(id -u):$(id -g)"
IMAGE='docker:stable'

[ "$DIND_LINK" = "" ] && exec $DOCKER_EXE $BASE_DOCKER_SOCK\
 $IMAGE $*

exec $DOCKER_EXE $DIND_LINK\
  $IMAGE $*
